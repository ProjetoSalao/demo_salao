<div id="<%= dom_id user_role %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= user_role.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Tenant:</strong>
    <%= user_role.tenant_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Cancreateshop:</strong>
    <%= user_role.canCreateShop %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this user role", user_role, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this user role', edit_user_role_path(user_role), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
