<div class="page-header">
  <%= link_to tasks_path, class: 'btn btn-default' do %>
    All Tasks
  <% end %>
  <%= link_to edit_task_path(@task), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show task</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @task.name %></dd>
  <dt>Value:</dt>
  <dd><%= @task.value %></dd>
  <dt>Duration:</dt>
  <dd><%= @task.duration %></dd>
</dl>
