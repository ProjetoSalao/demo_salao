


<div class="row">
  <div class="col-sm-6">
    <h1>Tasks</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_task_path, class: 'btn btn-primary' do %>
    Add New Task
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Value</th>
            <th>Duration</th>
            
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <%= content_tag :tr, id: dom_id(task), class: dom_class(task) do %>
          
            <td><%= link_to task.name, task %></td>
          

                      <td><%= task.value %></td>
                      <td><%= task.duration %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
